var align = {
    "b" : "left",
    "e" : "right",
    "j" : "right",
    "k" : "center"
}

var colors = {
    "b" : "#fad",
    "e" : "#fff",
    "j" : "#fff",
    "k" : "#fff"
}

var slide = 0;

var cached = {};

function impetus() {
  var imgroot = '/img/bootstrap/';

  s = script[slide];
  picture = s[0];
  text = s[1]
  $('#comicimg').attr('src', imgroot + picture + ".png");
  $('#comictext').text(text).css("color", colors[picture[0]]).css("text-align", align[picture]);
  slide = slide + 1;

  n = imgroot + script[slide][0];
  if (cached[n]) {
    // already cached
  } else {
    $.ajax({
      url: n,
    }).success(function() {
      cached[n] = true;
    });
  }
}

$('#vendetta').click(impetus);
impetus();
</script>